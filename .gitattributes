*.py text eol=lf
*.txt text eol=lf
*.md text eol=lf
# Create/update .gitattributes
cat > .gitattributes << 'EOF'
# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# Markdown
*.md text eol=lf

# JSON/YAML
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Requirements
requirements.txt text eol=lf

# Environment
.env text eol=lf
EOF
